<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:orientation="vertical"
        android:padding="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <com.mndt.ghost.doll.RoundImageView
        android:id="@+id/img_forum_icon1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/gps_me" />
        <TextView
            android:singleLine="true"
            android:ellipsize="end"
            android:id="@+id/text_forum_name"
            android:textSize="15dp"
            android:textColor="@color/gray"
            android:gravity="center"
            android:layout_marginLeft="5dp"
            android:text="Ghost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:singleLine="true"
                android:ellipsize="end"
                android:text="MNDT Ghost"
                android:id="@+id/text_forum_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textColor="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="25dp"
            android:layout_marginRight="100dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:singleLine="true"
                android:ellipsize="end"
                android:text="MNDT Ghost"
                android:id="@+id/text_forum_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textColor="@color/gray" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="57dp"
            android:layout_marginRight="100dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:singleLine="true"
                android:ellipsize="end"
                android:text="MNDT Ghost"
                android:id="@+id/text_forum_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:textColor="@color/gray" />
        </LinearLayout>


        <LinearLayout
            android:layout_marginRight="5dp"
            android:gravity="right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/img_forum_icon2"
                android:layout_width="30dp"
                android:layout_height="30dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="45dp"
            android:layout_marginRight="2dp"
            android:gravity="right|bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/img_forum_icon3"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_textsms_50dp" />
            <TextView
                android:layout_marginBottom="5dp"
                android:layout_marginRight="5dp"
                android:text="8591"
                android:textColor="@color/gray"
                android:id="@+id/text_forum_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>


    </RelativeLayout>

</LinearLayout>